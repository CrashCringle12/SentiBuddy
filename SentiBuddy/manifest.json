{
  "name": "Senti Buddy",
  "version": "2.4.1",
  "description": "Browser Extension to enable Filtering & Desktop Notifications for Sentinel â€” Toggle with ALT+A . ALT+C to access config.",
  "author": {
    "email": "cringlebox@gmail.com"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 3,
  "permissions": [
    "commands",
    "activeTab",
    "notifications",
    "tabs",
    "clipboardRead",
    "storage",
    "favicon"
  ],
  "action": {
    "default_popup": "popup.html",
    "chrome_style": false
  },
  "commands": {
    "open-config": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Command+Shift+C"
      },
      "description": "Modify Configurations"
    },
    "toggle-queue-filtering": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle Queue Filtering"
    },
    "search-ip": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Command+Shift+P"
      },
      "description": "Search an IP"
    },
    "search-hash": {
      "suggested_key": {
        "default": "Alt+H",
        "mac": "Command+Shift+H"
      },
      "description": "Search Hash"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/options-script.js", "scripts/timer-script.js", "core/core.js", "notes_app/timer.js"
      ],
      "css":[
        "core/core.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "options.html",
        "popup.html",
        "notes_app/*",
        "notes_app/*.html",
        "notes_app/*.js",
        "notes_app/*.css",
        "notes_app/**/*.html",
        "notes_app/**/*.js",
        "notes_app/**/*.css"
      ],
      "matches": [
        "https://portal.azure.com/*",
        "https://api.abuseipdb.com/*",
        "https://www.virustotal.com/*",
        "https://api11.scamalytics.com/*"
      ],
      "extension_ids": [
        "*"
      ]
    }
  ],
  "icons": {
    "16": "icon.png",
    "38": "icon.png",
    "48": "icon.png"
  }
}