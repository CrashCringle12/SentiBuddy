{
    "name": "Senti Buddy",
    "version": "3.0",
    "description": "Browser Extension to enable Filtering & Desktop Notifications for Sentinel â€” Toggle with ALT+A . ALT+C to access config.",
    "author": {
        "email": "cringlebox@gmail.com"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "notifications",
      "tabs",
      "clipboardRead",
      "storage",
      "favicon"
    ],
    "action": {
      "default_popup": "popup.html"
     },
    "commands": {
      "toggle-queue-filtering": {
        "description": "Activate extension",
        "suggested_key": {
          "default": "Alt+A",
          "mac": "Command+Shift+A"
        }
      },
      "search-ip": {
        "description": "Search an IP",
        "suggested_key": {
          "default": "Alt+P",
          "mac": "Command+Shift+P"
        }
      },
      "search-hash": {
        "description": "Search Hash",
        "suggested_key": {
          "default": "Alt+H",
          "mac": "Command+Shift+H"
        }
      },
      "open-config": {
        "description": "Modify Configurations",
        "suggested_key": {
          "default": "Alt+C",
          "mac": "Command+Shift+C"
        }
      }
    },
    "content_scripts": [
      {
        "matches": ["https://portal.azure.com/*", "https://api.abuseipdb.com/*", "https://www.virustotal.com/*", "https://api11.scamalytics.com/*"],
        "css": ["css/core.css"],
        "js": ["core.js", "scripts/timer-script.js", "scripts/stats.js"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    "background": {
      "service_worker": "service_worker.js"
    },
    "web_accessible_resources": [
        {
          "resources": [ "_favicon/*", "options.html", "popup.html", "note_gen/*"],
          "matches": ["https://portal.azure.com/*","https://api.abuseipdb.com/*", "https://www.virustotal.com/*", "https://api11.scamalytics.com/*"],
          "extension_ids": ["*"]
        }
      ],
    "icons": {
      "16": "icon.png",
      "38": "icon.png",
      "48": "icon.png"
    }
  }